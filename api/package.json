{
  "name": "api",
  "version": "1.0.0",
  "description": "Snnap back-end server",
  "keywords": [],
  "author": "Max Saperstone",
  "license": "ISC",
  "private": true,
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "lines": 95
      }
    },
    "coverageReporters": [
      "lcov",
      "text",
      "cobertura"
    ],
    "collectCoverageFrom": [
      "components/**/*.{js,jsx,ts,tsx}"
    ],
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report"
        }
      ]
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "junit.xml"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "scripts": {
    "start": "nodemon server.js",
    "lint": "eslint ./components ./services ./routes server.js -f @microsoft/eslint-formatter-sarif -o api-results.sarif",
    "test": "jest --coverage",
    "owasp": "owasp-dependency-check --scan package-lock.json --project 'snnap-api' -f ALL --failOnCVSS 8"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.3",
    "js-htmlencode": "^0.3.0",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "3.1.0",
    "nodemailer": "^6.9.1",
    "nodemon": "^2.0.20",
    "ws": "8.12.0"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "eslint": "8.34.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.4.2",
    "jest-html-reporter": "^3.7.0",
    "jest-junit": "^15.0.0",
    "owasp-dependency-check": "^0.0.21",
    "prettier": "^2.8.3"
  }
}
